@model IEnumerable<Vidly.Models.Movie>

@{
                /**/

                ViewBag.Title = "Movies";
                Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Movie</h2>
@if (!Model.Any())
{
    <text>There are no movies available.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td>@movie.Name <span class="pull-right">@Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, null)</span></td>
            </tr>
            }
        </tbody>
    </table>
}


